<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10 card">
        <div class="header">
          <h4 class="title">All Board-Members </h4>
        </div>
        <div class="content">
          <div class="projects-list">
            <% @abouts.each do |about| %>
              <div class="col-sm-4 col-xs-12 project">
                  <%= link_to about do %>
                      <div class="project-image-wrapper">
                          <div class="project-image" style="height:200px;">
                              <%= image_tag (about.avatar_url.to_s) %>
                              <div class="information">
                                  <h3 class="title"><%= about.name %></h3>
                                  <h5 class="title"><%= link_to 'Edit', edit_admin_about_path(about) %></span>
                                  <h5 class="title"><%= link_to 'Destroy', admin_about_path(about), method: :delete, data: { confirm: 'Are you sure?' } %></span>
                              </div>
                          </div>
                      </div>
                  <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-1">


                              <%= link_to new_admin_about_path, class: "btn btn-warning " do %>
                                <i class="fa fa-fw fa-plus-circle" aria-hidden="true"> </i>
                                Add New Board Memeber
                                 <% end %>

        </div>
          </div>
        </div>
      </div>
