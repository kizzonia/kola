<%= simple_form_for([@user, :admin, @about], :url => admin_abouts_path) do |f| %>
<%= f.error_notification %>


  <div class="form-group">
    <div class="col-md-12">

    <%= f.input :Name, class: "form-control" %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-md-12">
    <%= f.input :bio, class: "form-control", as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-12">
    <%= f.input :position, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-12">
    <%= f.input :avatar, as: :file,  class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-12">
    <%= f.submit :submit, class: "btn  btn-picasso" %>
  </div>
</div>
<% end %>
