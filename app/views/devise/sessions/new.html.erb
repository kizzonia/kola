<div class="card-text" style="padding:40px;">

<h3 class="text-center">Log In</h2>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
<div class="col-md-12">
  <div class="form-group">
    <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
  </div>
</div>
</div>
<div class="row">
<div class="col-md-12">
  <div class="form-group">
    <%= f.input :password, required: true, class: "form-control" %>
  </div>
</div>
</div>
<div class="row">
<div class="col-md-12">
  <div class="form-group">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
</div>
</div>
<div class="col-md-12">
  <div class="form-group">
    <%= f.button :submit, "Log in", class: "btn-purple btn col-md-8 col-md-offset-2" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links", class: "text-left" %>
</div>
